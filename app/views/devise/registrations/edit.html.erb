<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <h3>Cars</h3>
  <div id="cars">
    <%= f.fields_for :cars do |car_form| %>
      <div class="car-fields">
        <%= car_form.label :color %>
        <%= car_form.text_field :color %>
        <%= car_form.label :plate_number %>
        <%= car_form.text_field :plate_number %>
        <%= car_form.label :brand %>
        <%= car_form.text_field :brand %>
        <%= car_form.label :model %>
        <%= car_form.text_field :model %>
        <%= car_form.check_box :_destroy %>
        <%= car_form.label :_destroy, "Remove car" %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Add Car', '#', id: 'add-car' %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<h3>Cancel my account</h3>
<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
<%= link_to "Back", :back %>
<script>
  document.addEventListener("turbolinks:load", function() {
  var carFields = document.querySelector("#cars");
  var addCarButton = document.querySelector("#add-car");

  addCarButton.addEventListener("click", function(event) {
    event.preventDefault();
    var newCarFields = carFields.children[0].cloneNode(true);
    newCarFields.querySelectorAll("input").forEach(function(input) {
      input.value = "";
    });
    carFields.appendChild(newCarFields);
  });

  carFields.addEventListener("click", function(event) {
    if (event.target.classList.contains("remove-car")) {
      event.preventDefault();
      event.target.closest(".car-fields").remove();
    }
  });
  });
</script>